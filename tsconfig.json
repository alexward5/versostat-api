{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "rootDir": "src",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "types": ["node"]
    },
    "include": ["src"],
    "exclude": ["dist", "node_modules", "src/testing"]
}
